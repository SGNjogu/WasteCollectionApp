<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ttnm.Views.Dashboard.PickupSchedulePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Pickup Schedule"
    Shell.TabBarIsVisible="False">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label
            FontAttributes="Bold"
            HorizontalOptions="Start"
            Text="MORNING"
            VerticalOptions="Center" />
        <Label
            HorizontalOptions="Start"
            Text="All pickups are scheduled for between 9am and 12pm."
            VerticalOptions="Center" />
        <Label
            Margin="0,20,0,0"
            FontAttributes="Bold"
            HorizontalOptions="Start"
            Text="AFTERNOON"
            VerticalOptions="Center" />
        <Label
            HorizontalOptions="Start"
            Text="All pickups are scheduled for between 12pm and 5pm in the evening."
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>